- flash.each do |type, message|
  .fixed.inset-x-0.top-4.flex.items-center.justify-center.z-50
    .max-w-sm.w-full.bg-white.shadow-lg.rounded-lg.pointer-events-auto.ring-1.ring-black.ring-opacity-5.overflow-hidden{
      data: { controller: "flash", flash_target: "message" }}
      .p-4
        .flex.items-start
          .flex-shrink-0
            - if type == "notice"
              = heroicon("check-circle", options: { class: "h-6 w-6 text-green-400" })
            - else
              = heroicon("exclamation-circle", options: { class: "h-6 w-6 text-red-400" })
          .ml-3.w-0.flex-1.pt-0.5
            %p.text-sm.font-medium.text-gray-900= message
          .ml-4.flex-shrink-0.flex
            %button.bg-white.rounded-md.inline-flex.text-gray-400.hover:text-gray-500.focus:outline-none{
              data: { action: "click->flash#close" }}
              %span.sr-only Close
              = heroicon("x-mark", options: { class: "h-5 w-5" }) 