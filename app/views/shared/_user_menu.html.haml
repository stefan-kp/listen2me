.relative{data: { controller: "dropdown" }}
  %button.flex.items-center.gap-2.text-gray-700.hover:text-gray-900{
    data: { action: "click->dropdown#toggle" }}
    = heroicon("user-circle", options: { class: "h-8 w-8" })
    = heroicon("chevron-down", options: { class: "h-4 w-4" })

  .absolute.right-0.mt-2.w-48.rounded-md.shadow-lg.bg-white.ring-1.ring-black.ring-opacity-5.hidden{
    data: { dropdown_target: "menu" }}
    .py-1
      = link_to settings_path, class: "block px-4 py-2 text-sm text-gray-700 hover:bg-gray-100" do
        .flex.items-center.gap-2
          = heroicon("cog-6-tooth", options: { class: "h-4 w-4" })
          = t('.settings')
      = button_to destroy_user_session_path, method: :delete,
        class: "w-full text-left px-4 py-2 text-sm text-gray-700 hover:bg-gray-100" do
        .flex.items-center.gap-2
          = heroicon("arrow-right-on-rectangle", options: { class: "h-4 w-4" })
          = t('.sign_out')
