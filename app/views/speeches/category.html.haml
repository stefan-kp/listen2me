.max-w-7xl.mx-auto.px-4.sm:px-6.lg:px-8.py-8{"aria-labelledby": "category-title"}
  .flex.items-center.justify-between.mb-8
    .flex.items-center.gap-4
      = link_to speeches_path, 
        class: "text-gray-600 hover:text-gray-900", 
        role: "button",
        "aria-label": t('.back_to_categories') do
        = heroicon "arrow-left", options: { class: "h-5 w-5", "aria-hidden": "true" }
      %h1#category-title.text-2xl.font-bold.text-gray-900.flex.items-center.gap-2
        = heroicon @category.icon_name, options: { class: "h-8 w-8 text-gray-500", "aria-hidden": "true" }
        = @category.name

  .mb-8
    = render 'text_form'

  %section{"aria-labelledby": "sentences-title"}
    %h2#sentences-title.sr-only= t('.category_sentences', category: @category.name)
    .bg-white.shadow.sm:rounded-lg.divide-y.divide-gray-200{role: "list", "aria-label": t('.sentences_list')}
      - if @sentences.any?
        = render partial: 'sentence', collection: @sentences
      - else
        %p.p-4.text-center.text-gray-500{"aria-label": t('.no_sentences')}
          = t('.no_sentences')

  - content_for :keyboard_shortcuts do
    = render 'shared/keyboard_help' 