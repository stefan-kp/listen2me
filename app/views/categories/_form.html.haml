= form_with model: category, class: "space-y-6 w-full max-w-2xl mx-auto" do |f|
  .space-y-4
    .form-group
      = f.label :name, t('.name'), class: "form-label"
      = f.text_field :name,
        class: "form-input",
        required: true,
        placeholder: t('.name_placeholder')

    .form-group
      = f.label :icon_name, t('.icon_name'), class: "block text-sm font-medium text-gray-700 mb-2"
      .max-h-64.overflow-y-auto.rounded-lg.border.border-gray-200.p-4
        .grid.grid-cols-4.gap-4{data: { controller: "icon-selector" }}
          - Category::ICONS.each do |icon|
            .icon-option
              = f.radio_button :icon_name, icon, class: "sr-only peer", required: true, data: { action: "change->icon-selector#select" }
              = f.label "icon_name_#{icon}", class: "flex flex-col items-center p-2 rounded-lg border cursor-pointer hover:bg-gray-50 peer-checked:border-indigo-600 peer-checked:bg-indigo-50" do
                = heroicon icon, options: { class: "h-8 w-8 text-gray-500 peer-checked:text-indigo-600" }
                %span.mt-1.text-xs.text-gray-500.truncate.w-full.text-center= icon.titleize

  .flex.justify-end.gap-3.pt-4.border-t
    = link_to t('categories.common.cancel'), categories_path,
      class: "px-4 py-2 text-sm font-medium text-gray-700 hover:text-gray-500"
    = f.submit t(".submit.#{category.new_record? ? 'create' : 'update'}"),
      class: "inline-flex justify-center py-2 px-4 border border-transparent shadow-sm text-sm font-medium rounded-md text-white bg-indigo-600 hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500" 