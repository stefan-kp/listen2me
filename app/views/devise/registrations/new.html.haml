.min-h-screen.flex.items-center.justify-center.bg-gray-50.py-12.px-4.sm:px-6.lg:px-8
  .max-w-md.w-full
    .text-center.mb-8
      = link_to root_path do
        =# image_tag "logo.svg", class: "mx-auto h-12 w-auto", alt: "Listen2Me"
      %h2.mt-6.text-3xl.font-bold.text-gray-900= t('.sign_up')
      %p.mt-2.text-sm.text-gray-600
        = t(".or")
        = link_to t(".sign_in"), new_session_path(resource_name), class: "font-medium text-blue-600 hover:text-blue-500"

    .bg-white.p-8.shadow.rounded-lg
      = form_for(resource, as: resource_name, url: registration_path(resource_name), html: { class: "space-y-6" }) do |f|
        = render "devise/shared/error_messages", resource: resource

        .space-y-6
          .flex.gap-4
            .flex-1
              = f.label :first_name, class: "block text-sm font-medium text-gray-700"
              = f.text_field :first_name, autofocus: true,
                class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500 sm:text-sm",
                placeholder: User.human_attribute_name(:first_name)

            .flex-1
              = f.label :last_name, class: "block text-sm font-medium text-gray-700"
              = f.text_field :last_name,
                class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500 sm:text-sm",
                placeholder: User.human_attribute_name(:last_name)

          .form-group
            = f.label :email, class: "block text-sm font-medium text-gray-700"
            = f.email_field :email,
              class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500 sm:text-sm",
              placeholder: User.human_attribute_name(:email)

          .form-group
            = f.label :password, class: "block text-sm font-medium text-gray-700"
            = f.password_field :password,
              class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500 sm:text-sm",
              placeholder: User.human_attribute_name(:password)
            - if @minimum_password_length
              %p.mt-1.text-sm.text-gray-500
                = t('devise.shared.minimum_password_length', count: @minimum_password_length)

          .form-group
            = f.label :password_confirmation, class: "block text-sm font-medium text-gray-700"
            = f.password_field :password_confirmation,
              class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500 sm:text-sm",
              placeholder: User.human_attribute_name(:password_confirmation)

        .mt-6
          = f.submit t('.sign_up'),
            class: "w-full flex justify-center py-2 px-4 border border-transparent rounded-md shadow-sm text-sm font-medium text-white bg-blue-600 hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500"

    .mt-6.text-center.text-sm.text-gray-600
      = render "devise/shared/links" 