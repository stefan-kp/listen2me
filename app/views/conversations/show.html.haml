.container.mx-auto.p-4.max-w-4xl
  .flex.justify-between.items-center.mb-8
    %h2.text-xl.font-medium= t('.conversation')
    = link_to root_path,
      class: "px-4 py-2 bg-white hover:bg-gray-50 rounded-lg shadow-sm flex items-center gap-2 transition-colors" do
      = heroicon("arrow-left", options: { class: "h-4 w-4" })
      = t('.back_to_home')
      
  .bg-white.rounded-lg.shadow-sm.mb-8
    = turbo_frame_tag "messages" do
      .divide-y
        = render @messages
          
  %div{data: { controller: "audio-recorder",
               audio_recorder_conversation_id_value: @conversation.id }}
    .fixed.bottom-4.right-4.w-80.space-y-4
      .bg-white.rounded-lg.shadow-lg.p-4
        .text-sm.font-medium.text-gray-700.mb-2= t('.recognized_text')
        %div{data: { audio_recorder_target: "recognizedText" },
             class: "text-gray-600 min-h-[3rem]"}
          %em.text-gray-400= t('.waiting_for_speech')
        
        .mt-4.flex.justify-center
          .p-2.bg-gray-100.rounded-full.shadow-sm.hover:bg-gray-200.transition-colors
            %div{data: { audio_recorder_target: "indicator" }}
              = heroicon("microphone", options: { class: "h-6 w-6" }, variant: :solid)

  .mt-auto.space-y-4
    = render 'messages/form'
    
    #suggestions
      .text-sm.font-medium.text-gray-700.mb-2= t('.suggestions')
      = render "messages/suggestions", suggestions: @suggestions 